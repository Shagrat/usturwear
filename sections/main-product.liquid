<script>
(function(){
  // 1) Define your modal HTML as one chunk, with tab headers and two tab containers
  const modalHTML = `
 <style>
      /* Modal styles */
      .size-chart-overlay {
        position: fixed; top: 0; left: 0; right:0; bottom:0;
        background: rgba(0,0,0,0.6); display:flex;
